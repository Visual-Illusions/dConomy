<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.visualillusionsent</groupId>
    <artifactId>dconomy</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <name>dConomy</name>
    <url>http://wiki.visualillusionsent.net/view/dConomy</url>
    <inceptionYear>2011</inceptionYear>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <build.number>0</build.number>
        <canary.main.class>${project.groupId}.${project.artifactId}.canary.CanaryConomy</canary.main.class>
        <bukkit.main.class>${project.groupId}.${project.artifactId}.bukkit.BukkitConomy</bukkit.main.class>
        <vimcplugin.version>1.1.0-SNAPSHOT</vimcplugin.version>
        <viutils.version>1.3.0</viutils.version>
        <jdom2.version>2.0.5</jdom2.version>
        <vault.version>1.2.30</vault.version>
        <build.number>0</build.number>
        <status.url>http://status.visualillusionsent.net/</status.url>
        <devs>darkdiplomat</devs>
    </properties>
    <description>Economy base plugin for CanaryMod and Bukkit</description>
    <licenses>
        <license>
            <name>GNU General Public License v3</name>
            <url>http://www.gnu.org/licenses/gpl.html</url>
            <comments>
                dConomy is free software: you can redistribute it and/or modify
                it under the terms of the GNU General Public License as
                published by
                the Free Software Foundation, either version 3 of the License,
                or
                (at your option) any later version.

                dConomy is distributed in the hope that it will be useful, but
                WITHOUT ANY WARRANTY;
                without even the implied warranty of MERCHANTABILITY or FITNESS
                FOR A PARTICULAR PURPOSE.
                See the GNU General Public License for more details.
            </comments>
        </license>
    </licenses>
    <organization>
        <name>Visual Illusions Entertainment</name>
        <url>http://visualillusionsent.net</url>
    </organization>
    <scm>
        <url>https://github.com/Visual-Illusions/dConomy</url>
        <connection>GitHub</connection>
        <developerConnection>
            scm:git:git@github.com:Visual-Illusions/dConomy.git
        </developerConnection>
    </scm>
    <issueManagement>
        <url>http://github.com/Visual-Illusions/dConomy/issues</url>
        <system>GitHub Issues Tracker</system>
    </issueManagement>
    <ciManagement>
        <url>http://ci.visualillusionsent.net/job/dConomy</url>
        <system>Jenkins</system>
    </ciManagement>
    <distributionManagement>
        <repository>
            <id>vi-repo2</id>
            <url>http://repo2.visualillusionsent.net/repository/public/</url>
        </repository>
    </distributionManagement>
    <repositories>
        <repository>
            <id>vi-repo2</id>
            <name>Visual Illusions Repository</name>
            <url>http://repo2.visualillusionsent.net/</url>
        </repository>
        <!-- Vault Repository -->
        <repository>
            <id>vault-repo</id>
            <url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>net.visualillusionsent</groupId>
            <artifactId>vimcplugin</artifactId>
            <version>${vimcplugin.version}</version>
        </dependency>
        <!-- For Bukkit Users, We add support for Vault directly (at this time anyways) -->
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>${vault.version}</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>${project.name}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <linksource>true</linksource>
                    <doctitle>${project.name} ${project.version}</doctitle>
                    <header>Generated: ${maven.build.timestamp}</header>
                    <footer>
                        <![CDATA[Licensed under the <a href="http://www.gnu.org/licenses/gpl.html">GNU General Public License v3</a>]]></footer>
                    <links>
                        <link>
                            http://docs.visualillusionsent.net/VIUtils/${viutils.version}/
                        </link>
                        <link>http://www.jdom.org/docs/apidocs/</link>
                        <link>
                            http://docs.visualillusionsent.net/CanaryLib/1.0-RC-3/
                        </link>
                        <link>http://jd.bukkit.org/rb/apidocs/</link>
                    </links>
                </configuration>
            </plugin>
            <!-- Timestamp for year -->
            <plugin>
                <groupId>com.keyboardsamurais.maven</groupId>
                <artifactId>maven-timestamp-plugin</artifactId>
                <version>1.0</version>
                <configuration>
                    <propertyName>current.year</propertyName>
                    <timestampPattern>yyyy</timestampPattern>
                </configuration>
                <executions>
                    <execution>
                        <phase>pre-clean</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- Update Plugin/Mod Description Files -->
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.2</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <includes>
                        <!-- Other files -->
                        <include>target/**/*.cfg</include>
                        <include>target/**/*.txt</include>
                        <include>target/**/*.lang</include>
                        <include>target/**/*.readme</include>
                        <!-- CanaryMod -->
                        <include>target/**/*.inf</include>
                        <!-- Bukkit -->
                        <include>target/**/*.yml</include>
                    </includes>
                    <replacements>
                        <replacement>
                            <token>{plugin.version}</token>
                            <value>${project.version}</value>
                        </replacement>
                        <replacement>
                            <token>{wiki}</token>
                            <value>${project.url}</value>
                        </replacement>
                        <replacement>
                            <token>{issues}</token>
                            <value>${project.issueManagement.url}</value>
                        </replacement>
                        <replace>
                            <token>{status.url}</token>
                            <value>${status.url}</value>
                        </replace>
                        <replace>
                            <token>{build}</token>
                            <value>${build.number}</value>
                        </replace>
                        <replace>
                            <token>{build.time}</token>
                            <value>${maven.build.timestamp}</value>
                        </replace>
                        <replace>
                            <token>{devs}</token>
                            <value>${devs}</value>
                        </replace>
                        <replace>
                            <token>{copyright.years}</token>
                            <value>${project.inceptionYear}-${current.year}</value>
                        </replace>
                        <replace>
                            <token>{name}</token>
                            <value>${project.name}</value>
                        </replace>
                        <replace>
                            <token>{canary.main.class}</token>
                            <value>${canary.main.class}</value>
                        </replace>
                        <replace>
                            <token>{bukkit.main.class}</token>
                            <value>${bukkit.main.class}</value>
                        </replace>
                    </replacements>
                    <regex>false</regex>
                </configuration>
            </plugin>
            <!-- Compile plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <manifest>
                            <addClasspath>false</addClasspath>
                        </manifest>
                        <manifestEntries>
                            <Title>${project.name}</Title>
                            <Version>${project.version}</Version>
                            <Build>${build.number}</Build>
                            <Vendor>Visual Illusions Entertainment</Vendor>
                            <Built-By>${user.name}</Built-By>
                            <Build-Time>${maven.build.timestamp}</Build-Time>
                            <VIUtils-Version>${viutils.version}
                            </VIUtils-Version>
                            <JDOM2-Version>${jdom2.version}</JDOM2-Version>
                            <Class-Path>
                                ../lib/viutils-${viutils.version}.jar
                                ../lib/jdom2-${jdom2.version}.jar
                            </Class-Path>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <!-- License Header -->
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>2.3</version>
                <executions>
                    <execution>
                        <phase>clean</phase>
                        <goals>
                            <goal>format</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <quiet>false</quiet>
                    <encoding>UTF-8</encoding>
                    <strictCheck>true</strictCheck>
                    <header>${basedir}/HEADER.txt</header>
                    <keywords>
                        <keyword>${project.name}</keyword>
                        <keyword>license</keyword>
                    </keywords>
                    <mapping>
                        <java>SLASHSTAR_STYLE</java>
                    </mapping>
                    <properties>
                        <name>${project.name}</name>
                        <years>${project.inceptionYear}-${current.year}</years>
                        <gpl.type>GNU General Public License</gpl.type>
                        <license.url>http://www.gnu.org/licenses/gpl.html
                        </license.url>
                    </properties>
                    <includes>
                        <include>src/main/java/**</include>
                    </includes>
                </configuration>
            </plugin>
            <!-- Need to shade in the needed classes from Visual Illusions Minecraft Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <!-- Only need to shade the VIMCPlugin stuff -->
                                    <include>net.visualillusionsent:vimcplugin
                                    </include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>
                                        net.visualillusionsent:vimcplugin
                                    </artifact>
                                    <includes>
                                        <!-- Always include the license stuff -->
                                        <include>META-INF/license/**</include>
                                        <!-- Always include base VIMCPlugin stuff -->
                                        <include>
                                            net/visualillusionsent/minecraft/plugin/**
                                        </include>
                                    </includes>
                                    <excludes>
                                        <!-- Don't Exclude Bukkit/Canary
                                        <exclude>net/visualillusionsent/minecraft/plugin/canary/**</exclude>
                                        <exclude>net/visualillusionsent/minecraft/plugin/bukkit/**</exclude>
                                        -->
                                        <!-- Spout is unused at this time -->
                                        <exclude>
                                            net/visualillusionsent/minecraft/plugin/spout/**
                                        </exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <!-- Relocate the classes to appropriate packages -->
                            <relocations>
                                <!-- Relocate base VIMCPlugin stuff to base of plugin -->
                                <relocation>
                                    <pattern>
                                        net.visualillusionsent.minecraft.plugin
                                    </pattern>
                                    <shadedPattern>
                                        ${project.groupId}.${project.artifactId}
                                    </shadedPattern>
                                </relocation>
                                <!-- Canary -->
                                <relocation>
                                    <pattern>
                                        net.visualillusionsent.minecraft.plugin.canary
                                    </pattern>
                                    <shadedPattern>
                                        ${project.groupId}.${project.artifactId}.canary
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>
                                        net.visualillusionsent.minecraft.plugin.bukkit
                                    </pattern>
                                    <shadedPattern>
                                        ${project.groupId}.${project.artifactId}.bukkit
                                    </shadedPattern>
                                </relocation>
                                <!-- don't need Spout at this time
                                <relocation>
                                    <pattern>net.visualillusionsent.minecraft.plugin.spout</pattern>
                                    <shadedPattern>${project.groupId}.${project.artifactId}.spout</shadedPattern>
                                </relocation>
                                -->
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
